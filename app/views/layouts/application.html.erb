<!DOCTYPE html>
<html>
  <head>
    <title>BookTrace</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- ナビゲーションバー -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "BookTrace", root_path, class: "navbar-brand" %>
        
        <div class="navbar-nav ms-auto">
          <% if user_signed_in? %>
            <span class="navbar-text me-3">
              ようこそ、<%= current_user.name %>さん
            </span>
            <%= link_to "マイページ", profile_path, class: "nav-link" %>
            <%= link_to "読書記録一覧", reading_records_path, class: "nav-link" %>
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- フラッシュメッセージの表示 -->
    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <div class="container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
